@{
    List<Calificacione> calificaciones = ViewBag.calificaciones;
    List<Genero> generos = ViewBag.generos;
}
@section title  {
    <title>Administración de películas</title>
}
@section header
{
    <div class="page-header">
        <h3>Información de nueva película</h3>
    </div>
}
@section body
    {
    <form class="form-horizontal" method="post" action="/Administracion/CrearPelicula">
        <div class="form-group">
            <label class="control-label col-sm-2" for="Nombre">Nombre</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Nombre" placeholder="Ingrese nombre de película " name="nombre">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Descripción">Descripción</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Descripción" placeholder="Ingrese Descripción de película" name="Descripción">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Clasificación">Clasificación</label>
            <div class="col-sm-4">
                    <select>
                            @foreach (var item in calificaciones)
                            {
                                <option value="@item.IdCalificacion">
                                    @item.Nombre
                                </option>
                            }   
                    </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Género">Género</label>
            <div class="col-sm-4">
                <select>
                    @foreach (var item in generos)
                    {
                        <option value="@item.IdGenero">
                            @item.Nombre
                        </option>
                    }
                </select>

               
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Imagen">Imagen</label>
            <div class="col-sm-4">
                <input id="ImagePath" type="file" name="imagenPel" hidden>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Duracion">Duración</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Duracion" placeholder="Ingrese Duración de película" name="Duración">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="buttons"></label>
            <button type="button" onclick="location.href='@Url.Action("Inicio", "Home")'" class="btn btn-success">Listar películas</button>

            <div class="col-sm-2">
                <input type="submit" value="Submit">
                <!--button type="button" class="btn btn-success">Agregar película</!--button-->
            </div>
        </div>

    </form>

}




