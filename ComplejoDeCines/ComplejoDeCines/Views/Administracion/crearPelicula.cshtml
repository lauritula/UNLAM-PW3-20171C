
@model ComplejoDeCines.Models.CrearPeliculaModels


@{
    ViewBag.Title = "CrearPelicula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section title  {
    <title>Nueva Pelicula</title>
}
@section header
{
    <div class="page-header">
        <h3>Información de nueva pelicula</h3>
    </div>
}
@section body
    {

    <div class="container">
        @using (Html.BeginForm("/CrearPelicula", "Administracion", new { @class = "panel-body" }))
    {
            <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    @Html.TextBoxFor(model => model.Nombre, new { placeholder = "Nombre", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="nombre">Descripcion</label>
                    @Html.TextBoxFor(model => model.Descripcion, new { placeholder = "Descrpcion", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                    <button type="button" onclick="location.href='@Url.Action("Peliculas", "Administracion")'" class="btn btn-danger">Volver</button>
                </div>

            </div>
        }
    </div>

}





