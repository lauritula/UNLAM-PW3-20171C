
@{
    ViewBag.Title = "Carteleras";
    Layout = "~/Views/Shared/_Layout - Copia.cshtml";
}

@section title  {
    <title>Administración de carteleras</title>
}
@section header
{
    <div class="page-header">
        <h3>Gestión de carteleras</h3>
    </div>
}
@section body
    {
        <div class="col-lg-6">
            <p>
                ¿Lista de Carteleras?
            </p>

            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#">Opciones:</a></li>
                <li>@Html.ActionLink("Nueva cartelera", "CrearCartelera", "Administracion", null, null)</li>
                <li>@Html.ActionLink("Modificar cartelera", "ModificarCartelera", "Administracion", null, null)</li>
                <li>@Html.ActionLink("Eliminar cartelera", "EliminarCartelera", "Administracion", null, null)</li>
            </ul>

            <button type="button" onclick="location.href='@Url.Action("MenuPrincipal", "Administracion")'" class="btn btn-danger">Volver al Inicio</button>
        </div>

}







