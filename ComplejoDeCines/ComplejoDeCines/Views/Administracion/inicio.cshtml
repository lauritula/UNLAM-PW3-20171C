@model ComplejoDeCines.Models.LoginAdministradorModels


@{
    ViewBag.Title = "Inicio";
}

@section title  {
    <title>Administracion</title>
}

@section header
            {
    <div class="page-header">
        <h3>Bienvenido Administrador</h3>
    </div>
}

@section body
    {
    

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken() //Para evitar que se envien peticiones POST con datos erroneos
        <div>
            @Html.LabelFor(modelo => modelo.Usuario)
            @Html.EditorFor(modelo => modelo.Usuario)
            @Html.ValidationMessageFor(modelo => modelo.Usuario)
        </div>
        <div>
            @Html.Label("Contraseña")
            @Html.PasswordFor(modelo => modelo.Password)
            @Html.ValidationMessageFor(modelo => modelo.Password)
        </div>

        <div>
            <input type="submit" value="Ingresar" />
        </div>
    }
}




