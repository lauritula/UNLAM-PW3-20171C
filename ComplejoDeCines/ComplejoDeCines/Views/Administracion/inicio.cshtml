@model ComplejoDeCines.Models.LoginAdministradorModels

@{
    ViewBag.Title = "Inicio";
}
@section title  {
    <title>Administracion</title>
}
@section header
            {
    <div class="page-header">
        <h3>Bienvenido Administrador</h3>
    </div>
}
@section body
    {

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken() //Para evitar que se envien peticiones POST con datos erroneos
        <div class="form-group">
            @Html.LabelFor(modelo => modelo.Usuario, new { @class = "control-label col-sm-2" })
            <div class="col-sm-4">
                @Html.TextBoxFor(modelo => modelo.Usuario, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(modelo => modelo.Usuario, null, new { @class = "label label-danger" })

        </div>
        <div class="form-group">
            @Html.Label("Contraseña", new { @class = "control-label col-sm-2" })
            <div class="col-sm-4">
                @Html.PasswordFor(modelo => modelo.Password, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(modelo => modelo.Password, null, new { @class = "label label-danger" })

        </div>

        <div class="form-group">
            <input type="submit" value="Ingresar" />
        </div>
    }
}
